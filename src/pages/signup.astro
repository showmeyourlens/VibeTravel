---
import { SignupForm } from "../components/auth/SignupForm";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sign Up - VibeTravel">
  <div
    class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8 flex items-center justify-center"
  >
    <div
      class="relative w-full max-w-md backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 border border-white/10"
    >
      <div class="space-y-8">
        <div class="text-center space-y-2">
          <h1
            class="text-4xl font-bold bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text"
          >
            Join VibeTravel
          </h1>
          <p class="text-blue-100/70">Create your account to get started</p>
        </div>
        <div class="bg-gradient-to-br from-white/5 to-white/0 backdrop-blur rounded-xl p-6 border border-white/10">
          <SignupForm client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
