---
import { LoginForm } from "../components/auth/LoginForm";
import Layout from "../layouts/Layout.astro";
import { Panel } from "../components/ui/Panel";
---

<Layout title="Log In - VibeTravel">
  <div class="relative w-full mx-auto min-h-screen p-4 sm:p-8 flex items-center justify-center">
    <Panel className="relative w-full max-w-md">
      <div class="space-y-8">
        <div class="text-center space-y-2">
          <h1 class="text-secondary-foreground text-4xl font-bold bg-gradient-to-r bg-clip-text">Welcome Back</h1>
          <p class="text-muted-foreground">Log in to your VibeTravel account</p>
        </div>
        <div class="p-6 text-left">
          <LoginForm client:load />
        </div>
      </div>
    </Panel>
  </div>
</Layout>
