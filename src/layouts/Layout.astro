---
import "../styles/global.css";
import SlideshowBackground from "../components/layout/SlideshowBackground.tsx";
import type { ImageMetadata } from "astro";
import TopBar from "../components/layout/TopBar.tsx";

interface Props {
  title?: string;
}

const { title = "VibeTravel" } = Astro.props;
const user = Astro.locals.user;

const imageModules = import.meta.glob<{ default: ImageMetadata }>("../../public/assets/backgrounds/*.webp", {
  eager: true,
});
const imagePaths = Object.values(imageModules).map((image) => image.default.src);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {imagePaths.map((src) => <link rel="preload" as="image" href={src} />)}
  </head>
  <body>
    {user && <TopBar client:load />}
    <SlideshowBackground images={imagePaths} client:load />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
